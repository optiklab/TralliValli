# TraliVali Local Development Environment Variables
# Copy this file to .env and update the values as needed

# ==========================================
# MongoDB Configuration
# ==========================================
# MongoDB root username for authentication
MONGO_ROOT_USERNAME=admin

# MongoDB root password for authentication
MONGO_ROOT_PASSWORD=password

# MongoDB default database name
MONGO_DATABASE=tralivali

# MongoDB port exposed on host machine (default: 27017)
MONGO_PORT=27017

# MongoDB Connection String (used by application)
# Format: mongodb://username:password@host:port/database?authSource=admin
MONGODB_CONNECTION_STRING=mongodb://admin:password@localhost:27017/tralivali?authSource=admin

# ==========================================
# RabbitMQ Configuration
# ==========================================
# RabbitMQ default username
RABBITMQ_USERNAME=admin

# RabbitMQ default password
RABBITMQ_PASSWORD=password

# RabbitMQ virtual host (default: /)
RABBITMQ_VHOST=/

# RabbitMQ AMQP port exposed on host machine (default: 5672)
RABBITMQ_PORT=5672

# RabbitMQ Management UI port exposed on host machine (default: 15672)
# Access management UI at: http://localhost:15672
RABBITMQ_MANAGEMENT_PORT=15672

# RabbitMQ Connection String (used by application)
# Format: amqp://username:password@host:port/vhost
RABBITMQ_CONNECTION_STRING=amqp://admin:password@localhost:5672/

# ==========================================
# Redis Configuration
# ==========================================
# Redis password for authentication
REDIS_PASSWORD=password

# Redis port exposed on host machine (default: 6379)
REDIS_PORT=6379

# Redis Connection String (used by application)
# Format: host:port,password=password
REDIS_CONNECTION_STRING=localhost:6379,password=password

# ==========================================
# Application Configuration
# ==========================================
# Application environment (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Application listening port (default: 5000)
ASPNETCORE_HTTP_PORT=5000

# Application HTTPS listening port (default: 5001)
ASPNETCORE_HTTPS_PORT=5001

# ==========================================
# Notes
# ==========================================
# - All passwords should be changed in production environments
# - Make sure to create a .env file from this template before running docker-compose
# - The .env file is gitignored to prevent committing sensitive data
# - For production, use strong passwords and secure credential management
# - Management UI URLs:
#   - RabbitMQ: http://localhost:15672 (username: admin, password: password)
